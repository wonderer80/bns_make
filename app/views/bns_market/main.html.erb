<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
<html>
<body>
<div class="container">
  <% @result.each do |i| %>
      <h4><%= i[:made_item_name] %>(개수 <%= i[:made_item_num] %>개) - <%= convert_humun_time(i[:made_time]) %> </h4>
      <table class="table">
        <tr><td>재료비</td> <td><%= i[:price].round(2) %></td></tr>
        <tr><td>제작비</td> <td><%= i[:production_cost] %></td></tr>
        <tr class="danger"><td>총제작비</td> <td><%= i[:total_cost].round(2) %></td></tr>
        <tr class="info"><td>판매수익(수수료 7%)</td> <td><%= i[:item_price].round(2) %></td></tr>
        <tr class="success"><td>차익</td> <td><%= i[:earning_price].round(2) %></td></tr>
        <tr class="success"><td>시간당 이익</td> <td><%= i[:earning_by_hour] %></td></tr>
      </table>
  <% end %>
  <h5>갱신시간: <%= Time.now.strftime('%F %T') %></h5>
  <h5>문의사항: <a href="http://sandbox.plaync.com/5B3C93F8-D15F-E011-9A06-E61F135E992F">라일락꿀향기</a></h5>
</div>
</body>
</html>